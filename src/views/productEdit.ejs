<body>
    <%- include("./partials/header") %> 

    <main>
        <div class="edit-modify">
            <div class="div-edit-modify" action="">
                <img src="/images/mustang.png" alt="">
            </div>
                <div class="content-box">   
                    <form class="form-edit-modify" action="">
