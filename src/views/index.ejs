  <body>

  <%- include("./partials/header") %> 
    

    <main>      
      <section class="search-car">

      <p>Tu auto ideal, a un solo click de distancia.</p>
      
      <form class="form-search-car" method="get" action="/products/search">
        
        <select  name="tipo" id="tipo" >
          <option value="" disabled selected>Tipo Vehículo</option>

          <% for( let vehicleType of vehicleTypes ) { %>
            <option value="<%= vehicleType.id %>"><%= vehicleType.tipo %></option>
          <% } %>
        </select>

        <select name="brand_id" id="brand_id" >
          <option value="" disabled selected>Marca</option>

          <% for( let brand of brands ) { %>
            <option value="<%= brand.id %>"><%= brand.name %></option>
          <% } %>
        </select>

        <select name="model_id" id="model_id" >
          <option value="" disabled selected>Modelo</option>
        </select>
        

        <div>
          <button class="button-filter" type="/">
            Buscar
          </button>
        </div>
      </form>
    </section>

    <section class="recomendations">
      <h3>Nuestros recomendados</h3>
      <%- include('partials/carrucel') %> 
    </section>


    <section class="banner-primera-plana"></section>

    <section class="buy_with_us">
